// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  content   String
  url       String
  points    Int
  solution  String
  completed String[]
  type      String
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  points    Int
  completed String[]
}
